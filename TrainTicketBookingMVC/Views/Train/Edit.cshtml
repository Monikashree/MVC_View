@model TrainTicketBookingMVC.Entity.Train

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Update", "Train", FormMethod.Post))
{
    @Html.HiddenFor(Model => Model.TrainNo)
    <table cellpadding="10">
        <tr>
            <td>
                @Html.Label("TrainName")
            </td>
            <td>
                @Html.EditorFor(Model => Model.TrainName)
            </td>
        </tr>        
        <tr>
            <td>
                @Html.ActionLink("Cancel", "Index")
            </td>
            <td>
                <input type="submit" value="Update" />
            </td>
        </tr>
    </table>
}
